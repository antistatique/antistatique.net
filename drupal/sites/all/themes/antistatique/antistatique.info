name = Antistatique
description = A Bootstrap Sub-theme.
core = 7.x
base theme = bootstrap


;;;;;;;;;;;;;;;;;;;;;
;; Regions
;;;;;;;;;;;;;;;;;;;;;

regions[page_top]       = 'Page top'
regions[navigation]     = 'Navigation'
regions[header]         = 'Header'
regions[help]           = 'Help'
regions[content]        = 'Content'
regions[content_above]  = 'Above Content'
regions[content_below]  = 'Below Content'
regions[footer]         = 'Footer'
regions[above_footer]    = 'Above Footer'


;;;;;;;;;;;;;;;;;;;;;
;; Stylesheets
;;;;;;;;;;;;;;;;;;;;;

stylesheets[all][] = build/css/vendors.css
stylesheets[all][] = build/css/main.css
scripts[] = build/js/vendors.min.js
scripts[] = build/js/main.min.js

exclude[js][] = 'sites/all/themes/bootstrap/js/bootstrap.js'

exclude[css][] = 'sites/all/modules/contrib/views/css/views.css'
exclude[css][] = 'modules/field/theme/field.css'
exclude[css][] = 'sites/all/modules/contrib/views/css/views.css'

; Disable BootstrapCDN if using Bootstrap source files in your sub-theme.
settings[bootstrap_cdn] = ''
